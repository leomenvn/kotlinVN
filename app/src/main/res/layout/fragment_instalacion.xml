<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.Instalacion">

    <TextView
        android:id="@+id/tv_frInst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtInstalacion"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:contentDescription="@string/txtInstalacion"
        android:id="@+id/iv_frInst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/instalacion"
        app:layout_constraintTop_toBottomOf="@id/tv_frInst"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>